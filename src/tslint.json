{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "semicolon": false,
        "variable-name": [
          true,
          "ban-keywords",
          "check-format",
          "allow-leading-underscore"
        ]
    }
}
